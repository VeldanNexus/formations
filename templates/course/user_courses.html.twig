{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">My Subscribed Courses</h1>

    <div class="row g-4">
        {% for course in courses %}
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{ asset('images/default-course.jpg') }}" 
                         class="card-img-top" alt="Default image">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text fw-bold text-primary">
                            500 â‚¬
                        </p>

                        <div class="mt-auto">
                                 <form method="post" action="{{ path('course_unsubscribe', {id: course.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe_' ~ course.id) }}">
                                    <button class="btn btn-danger w-100">
                                        Unsubscribe
                                    </button>
                                </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                You are not subscribed to any courses.
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
