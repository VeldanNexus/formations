{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Available Courses</h1>

    {# -- FILTERS -- #}
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-6">
            <input
                type="text"
                name="q"
                value="{{ q ?? app.request.get('q') }}"
                class="form-control"
                placeholder="Search by title..."
            />
        </div>

        <div class="col-md-2 d-grid">
            <button class="btn btn-primary">Filter</button>
        </div>
    </form>

    {# -- RESULTS GRID -- #}
    <div class="row g-4">
        {% for course in courses %}
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{ asset('images/default-course.jpg') }}" class="card-img-top" alt="Default image">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text fw-bold text-primary">500 â‚¬</p>

                        <div class="mt-auto">
                            {% if course.id not in subscribedCourseIds %}
                                <form method="post" action="{{ path('course_subscribe', {id: course.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('subscribe_' ~ course.id) }}">
                                    <button class="btn btn-success w-100">Subscribe</button>
                                </form>
                            {% else %}
                                <button class="btn btn-secondary w-100" disabled>Subscribed</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">No courses available.</div>
        {% endfor %}
    </div>

    {# -- PAGINATION -- #}
    {% if courses is iterable and courses|length > 0 %}
        <div class="mt-4 d-flex justify-content-center">
            {{ knp_pagination_render(courses) }}
        </div>
    {% endif %}
</div>
{% endblock %}
